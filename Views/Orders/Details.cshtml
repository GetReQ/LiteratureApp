@model Literature.Models.Order

@{
  ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
  <h4>Publisher</h4>
  <hr />
  <dl class="dl-horizontal">
    <dt>
      @Html.DisplayNameFor(model => model.Publisher.FirstName)
    </dt>
    <dd>
      @Html.DisplayFor(model => model.Publisher.FirstName)
    </dd>
    <dt>
      @Html.DisplayNameFor(model => model.Publisher.LastName)
    </dt>
    <dd>
      @Html.DisplayFor(model => model.Publisher.LastName)
    </dd>
    <dt>
      @Html.DisplayFor(model => model.OrderItems)
    </dt>
    <dd>
      <table class="table">
        <tr>
          <th>Publication</th>
          <th>Language</th>
          <th>Quantity</th>
        </tr>
        @foreach (var item in Model.OrderItems)
        {
          <tr>
            <td>
              @Html.DisplayFor(modelItem => item.Publication.ToString())
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.Publication.Language)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.Quantity)
            </td>
          </tr>
        }
      </table>
    </dd>
  </dl>
</div>
<div>
  <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
  <a asp-action="Index">Back to List</a>
</div>